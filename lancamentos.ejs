<%- include('nav') -%>

 <main>          
    <div class= main>
        <div class="title">
            <h1>NOVOS LANÇAMENTOS</h1>
        </div>
        <div>
          <form action="" class="form" id="form" method="POST" name="form">
              <fieldset class="box balence">
                  <legend>Saldo</legend>
                  <% ad.forEach(function(row){ %>
                    <%= row.saldo%>
                  <% }); %>
                   
              </fieldset>
              <div id="block">
                  <fieldset class="box value">
                      <legend class="col-form-label col-sm-2 pt-0">Valor</legend>
                      <label for="R$">R$</label>
                      <input type="text" name="R$" placeholder="0,00">
                  </fieldset>
                  <fieldset class="box date">
                      <legend class="col-form-label col-sm-2 pt-0">Data</legend>
                      <input type="date">
                  </fieldset>
              </div>
                  <fieldset class="box">
                      <legend>Título de Lançamentos</legend>
                      <input type="text" placeholder="Nome da transação">
                  </fieldset>
                  <fieldset class="box checkbox">
                      <legend class="col-form-label col-sm-2 pt-0">Tipo de Lançamento</legend>
                      <div class="col-sm-10">
                          <div class="form-check">
                              <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios1" value="option1" checked>
                              <label class="form-check-label" for="gridRadios1">Entrada</label>
                          </div>
                          <div class="form-check">
                              <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios2" value="option2">
                              <label class="form-check-label" for="gridRadios2">Saída</label>
                          </div>
                      </div>

              </fieldset>
              <div class="btn">
                  <a class="btn-danger"href="" ><i class="fas fa-question-circle"></i></a>
                  <button type="submit" href="/menu" class="btn-info"><i class="fas fa-arrow-circle-right"></i></button>
              </div>
           </form> 
        </div>
    </div>
  </main>

  <%- include('footer') -%>